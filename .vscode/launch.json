    "version": "0.2.0",
    "configurations": [
        {
            "name": "Rule-based Tetris",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tetris.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["--engine", "rule"]
        },
        {
            "name": "Record Tetris",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tetris.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["--record", "--engine", "rule"]
        },
        {
            "name": "Model-based Tetris (normal)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tetris.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["--engine", "model", "--engine-mode", "normal"]
        },
        {
            "name": "Model-based Tetris (prob)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tetris.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["--engine", "model", "--engine-mode", "prob"]
        }
    ]
}